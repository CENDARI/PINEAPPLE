{% extends "main.html.twig" %}

{% block title %}{{ document.getUri }}{% endblock %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            {% if document %}
            <h1>{{ document.getTitle }}</h1>
            <dl class="dl-horizontal">
                <dt>Source</dt>
                <dd>{{ document.getSource }}</dd>
                <dt>Last Modified</dt>
                <dd>{{ document.getLastModifiedDate }}</dd>
                <dt>Plain Text</dt>
                <dd id='raw_text' style="max-height: 300px; overflow-y: scroll">
                    <pre>
                        {{  document.getPlainText }}
                    </pre>
                </dd>
            </dl>
            <h2>Mentions</h2>
            <ul class="reference-list">
                {% for resource in document.getLinkedResources %}
                    <li>
                        <a title="{{ resource.getUri }}" href="{{ urlFor("mention", {"type": resource.getType, "name": resource.getSchemaName}) }}">{{  resource.getName }}</a>
                    </li>
                {% endfor %}
            </ul>
            {% else %}

            {% endif %}
        </div>
    </div>
</div>
{% endblock %}