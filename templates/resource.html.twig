{% extends "main.html.twig" %}

{% block title %} - {{ title }}{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>{{ title }}</h1>
                <dl class="dl-horizontal">
                    <dt>{% trans "Source" %}</dt>
                    <dd>{{ source }}</dd>
                    <dt>{% trans "Last modified" %}</dt>
                    <dd>{{ lastModified|pretty_date }}</dd>
                    <dt>{% trans "Plain Text" %}</dt>
                    <dd class="raw-text">
                        <pre>
                            {{ plainText }}
                        </pre>
                    </dd>
                </dl>
                {% include "_mentions.html.twig" %}
                {% include "_related.html.twig" %}
            </div>
        </div>
    </div>
{% endblock %}