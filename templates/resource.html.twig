{% extends "main.html.twig" %}

{% block title %} - {{ title }}{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>{{ title }}</h1>
                <dl class="dl-horizontal">
                    {% if source %}
                        <dt>{% trans "Source" %}</dt>
                        <dd>{{ source }}</dd>
                    {% endif %}
                    {% if lastModified %}
                        <dt>{% trans "Last modified" %}</dt>
                        <dd>{{ lastModified|pretty_date }}</dd>
                    {% endif %}
                    {% if plainText %}
                        <dt>{% trans "Plain Text" %}</dt>
                        <dd class="raw-text">
                        <pre>
                            {{ plainText }}
                        </pre>
                        </dd>
                    {% endif %}
                </dl>
                {% include "_mentions.html.twig" with {"mentions": mentions} %}
                {% include "_related.html.twig" with {"related": related} %}
            </div>
        </div>
    </div>
{% endblock %}