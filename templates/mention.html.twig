{% extends "main.html.twig" %}

{% block title %} - {{ name }}{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>{{ name }}</h1>

                {% if not mentions is empty %}
                <h2>{% trans "Referencing resources" %}</h2>
                <ul class="reference-list">
                    {% for item in mentions %}
                        <li>
                            <a class="title" href="{{ urlFor("resource", {"type": item.type, "id": item.id}) }}">{{ item.title }}</a>
                        </li>
                    {% endfor %}
                </ul>
                {% include "_pagination.html.twig" with {'items': mentions} %}
                {% else %}
                    <p>{% trans "No referencing resources found" %}</p>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}