{% extends "main.html.twig" %}

{% block title %} - {% trans "Ontology Browser" %}{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <form action="{{ currentUrl() }}" method="get" class="form-inline">
                        <h1>{% trans "Ontology Browser" %}</h1>

                        <div class="col-md-9">
                            {% include "_search_form.html.twig" %}
                            <ul class="resource-list">
                                {% for item in resources %}
                                    <li>
                                        <div class="resource">
                                            <strong>{{ item.prefLabel }}</strong> <span class="type">{{ item.type|strip_rdf_prefix }}</span>
                                            <div class="note">
                                                {{ item.note }}
                                            </div>
                                        </div>
                                    </li>
                                {% else %}
                                    <li>{% trans "No results found" %}</li>
                                {% endfor %}
                            </ul>
                            {% include "_pagination.html.twig" with {"items": resources, "extra": {"type": type_facet}} %}
                        </div>
                        <div class="col-md-3">
                            {% if not types is empty %}
                                <div class="panel panel-default">
                                    <div class="panel-heading">{% trans "Filter Resource Types" %}</div>
                                    <ul class="list-group">
                                        {% for type in types %}
                                            <li class="list-group-item">
                                            {% if type_facet == type.type %}
                                                <strong>{{ type.type|strip_rdf_prefix }}</strong>
                                                <a href="?{{ {"offset": offset, "q": query}|url_encode }}">
                                                    <small>[remove filter]</small>
                                                </a>
                                            {% else %}
                                                <a href="?{{ {"offset": null, "q": query, "type": type.type}|url_encode }}">
                                                    {{ type.type|strip_rdf_prefix }} ({{ type.count }})
                                                </a>
                                            {% endif %}
                                            </li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            {% endif %}
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}